user_input = input("Enter a string:")
input_list = []
output_list = []
i=1
num_str = ""

#Create a list to hold pieces of the input
for char in user_input:
    input_list.append(char)


#1st parcing - converting constantx <---> constant*x    
while i < len(user_input):
    current = input_list[i]
    previous = input_list[i-1]
    if current.isalpha() and previous.isdigit():
        j = i-1
        while input_list[j].isdigit():
            num_str = input_list[j] + num_str
            j -= 1
        output_list.append(num_str + "*" + current)
        num_str = ""
        i += 1
    else:
        output_list += current
        i += 1
print(output_list)
#2nd parcing - combination of constants
i = 1
while i < len(output_list):
    current = output_list[i]
    previous = output_list[i-1]
    
